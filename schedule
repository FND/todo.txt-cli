#!/usr/bin/env bash

action=$1
shift
item=$1
shift

function usage {
	echo "  $(basename $0) item"
	echo "    Append date threshold to item."
	echo "    Intended to be used with futureTasks \
              (http://github.com/FND/todo.txt-cli/blob/extensions/futureTasks)."
	echo ""
	exit
}

[ "$action" = "usage" ] && usage

$TODO_SH append $item "t:"`date -d "$*" +%F`
